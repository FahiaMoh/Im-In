<%= form_for @user, url: {action: "update"} do |f| %>
      <div class="form-group">
        <%= f.label :email %>
        <%= f.email_field :email %>
      </div>

      <div class="form-group">
        <%= f.label :password %>
        <%= f.password_field :password %>
      </div>

      <div class="form-group">
        <div class="checkbox">
          <%= f.label :username %>
          <%= f.text_field :username %>
        </div>
      </div>

      <div class="form-group">
        <%= f.submit "Edit" %>
      </div>
<% end %>


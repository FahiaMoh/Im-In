<div class="container">
<h1>FOLLOWING</h1>
<% @following.each do |friend| %>
<%= friend.username %><br>
<% end %>
<br><br>

<h3>FOLLOW</h3>
<%= form_for :user, url: follow_path do |f| %>
  <%= f.label :username %>
  <%= f.text_field :username %>
  <%= f.submit "follow" %>
<% end %>
<br><br>

<h3>UNFOLLOW</h3>
<%= form_for :user, url: unfollow_path do |f| %>
  <%= f.label :username %>
  <%= f.text_field :username %>
  <%= f.submit "unfollow" %>
<% end %>
<br><br>
<button>
<%= link_to "ATTENDING INS", user_events_attending_path(current_user) %>
</button>
<button>
<%= link_to "CREATED INS", user_events_created_path(current_user) %>
</button>
<button>
<%= link_to "CREATE NEW IN", new_event_path %>
</button>
</div>
